@model Book
@{
    ViewData["Title"] = "Edit";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Category
                        </p>
                        <form asp-controller="Book" asp-action="Edit" class="forms-sample" method="post">
                            <div class="form-group">
                                <div>
                                    <label for="exampleInputUsername1">Name</label>
                                    <input type="text" class="form-control" asp-for="Name">
                                    <span class="text-danger my-1" asp-validation-for="Name"></span>
                                </div>


                                <div>
                                    <label for="exampleInputUsername1" class="my-2">Description</label>
                                    <input type="text" class="form-control" asp-for="Description">
                                    <span class="text-danger my-1" asp-validation-for="Description"></span>
                                </div>


                                <div>
                                    <label asp-for="TagIds" for="exampleInputUsername1" class="my-2">Tag</label>
                                    <select asp-for="TagIds"  class="form-control" asp-items="new SelectList((List<Tag>)ViewBag.Tags, nameof(Tag.Id), nameof(Tag.Name))"></select>
                                    <span asp-for="TagIds"  class="text-danger my-1" asp-validation-for="TagIds"></span>
                                </div>

                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="Book" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}