@model BlogHeader
@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <div class="row my-5">
        <span class="text-danger">@ViewBag.Message</span>
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <h2 style="color:blue;text-align:center">- Create BlogHeader -</h2>
                <div class="card-body">

                    <form asp-controller="BlogHeader" asp-action="Edit" class="forms-sample" method="post">
                        <div class="form-group">
                            <div>
                                <label for="exampleInputUsername1">Title</label>
                                @*<input type="text" class="form-control" asp-for="Header">*@
                                <textarea class="form-control rounded-0" asp-for="Title" id="Header-area" rows="10"></textarea>
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>

                            <div>
                                <label for="exampleInputUsername1">Description</label>
                                @*<input type="text" class="form-control" asp-for="HeaderDesc">*@
                                <textarea class="form-control rounded-0" asp-for="Description" id="HeaderDesc-area" rows="10"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>

                        </div>

                        <button type="submit" class="btn btn-primary me-2">Edit</button>
                        <a asp-controller="BlogHeader" asp-action="Index" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />

    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("Header-area")
        CKEDITOR.replace("HeaderDesc-area")
    </script>

}

