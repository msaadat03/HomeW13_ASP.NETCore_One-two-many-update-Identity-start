@model BlogHeader
@{
    ViewData["Title"] = "Index";

}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Header
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    <tr>
                        <td>
                            @Html.Raw(Model.Title)
                        </td>
                        <td>
                            @Html.Raw(Model.Description)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

