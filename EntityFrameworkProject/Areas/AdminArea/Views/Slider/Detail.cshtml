@model Slider
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img src="~/img/@Model.Image" style="width:100% !important; height:488.2px !important" alt="slider" />
                    </td>
                </tr>
            </tbody>
        </table>
        <a class="btn btn-primary my-1" asp-controller="Slider" asp-action="Index">Back</a>
    </div>
</div>
