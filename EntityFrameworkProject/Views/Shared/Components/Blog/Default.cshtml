@model BlogListVM

<section id="blog">
    <div class="container">
        <div class="row py-5">
            <div class="offset-lg-3 col-lg-6">
                <div class="section-title">
                    <h1>@Html.Raw(Model.BlogHeader.Title)</h1>
                    <p>@Html.Raw(Model.BlogHeader.Description)</p>

                </div>
            </div>
        </div>
        <div class="row pb-5">
            @foreach (var blog in Model.Blogs)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="item">
                        <div class="img position-relative">
                            <img src="~/img/@blog.Image" style="width:350px; height:223.45px" class="img-fluid" alt="">
                            <div class="date rounded bg-light position-absolute py-1 px-2">
                                <span>@blog.Date.ToString("MM/dd/yyyy")</span>
                            </div>
                        </div>
                        <div class="text mt-3 text-center px-5">
                            <h5>@blog.Title</h5>
                            <p class="text-black-50">
                                @blog.Desc
                            </p>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</section>
